/**
 * "*" to add to all items
 */
function addToolTip(item, text) {
    onEvent('item.tooltip', event => {
        return event.addToolTip(item, text)
    })

}

/**
 * "*" to add to all items
 */
function addAdvancedTooltip(item, handler) {
    onEvent('item.tooltip', event => {
        return event.addAdvancedTooltip(item, handler)
    })
}